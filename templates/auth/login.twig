{% extends 'front/base.twig' %}

{% block title %}{{ 'login_title'|trans }}{% endblock %}

{% block body %}
<div class="row">

    <div class="col-md-4 offset-md-4 pt-5">
        <form action="{{ path_for('postLogin') }}" method="post">
            <div class="form-group">
                <label for="email">{{ 'email'|trans }}</label>
                <input type="email" class="form-control" id="email" name="email" placeholder="{{ 'email'|trans }}" required>
            </div>
            <div class="form-group">
                <label for="password">{{ 'password'|trans }}</label>
                <input type="password" class="form-control" id="password" name="password" placeholder="{{ 'password'|trans }}" required>
            </div>
            <button type="submit" class="btn btn-primary">{{ 'connect'|trans }}</button>
        </form>
    </div>

    <div class="col-md-4 offset-md-4 pt-5">
        {{ form|raw }}
    </div>
</div>


{%  endblock %}

